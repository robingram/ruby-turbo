<div class="my-4">
  <%= turbo_frame_tag dom_id(listing) do %>
    <div class="flex justify-between items-center border rounded px-2">
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= listing.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Address:</strong>
        <%= listing.address %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Available from:</strong>
        <%= listing.available_from %>
      </p>

      <div>
        <%= link_to "Show this listing", listing, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: "_top" } %>
        <%= link_to 'Edit this listing', edit_listing_path(listing), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <%= button_to 'Delete this listing', listing_path(listing), method: :delete, class: "rounded-lg py-3 ml-2 px-5 bg-red-100 inline-block font-medium", form_class: "inline-block" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing listing</h1>

  <%= turbo_frame_tag dom_id(@listing) do %>
    <%= render "form", listing: @listing %>

    <%= link_to "Cancel", listings_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Show this listing", @listing, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium", data: { turbo_frame: "_top" } %>
  <% end %>
</div>

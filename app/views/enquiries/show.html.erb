<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @enquiry %>

    <%= link_to 'Edit this enquiry', edit_enquiry_path(@enquiry), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this enquiry', enquiry_path(@enquiry), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to enquiries', enquiries_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

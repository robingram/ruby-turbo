<div class="my-4">
  <div id="<%= dom_id enquiry %>" class="flex justify-between items-center border rounded px-2">
    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= enquiry.name %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Email:</strong>
      <%= enquiry.email %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Message:</strong>
      <%= enquiry.message %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Listing:</strong>
      <%= enquiry.listing.title %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this enquiry", enquiry, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this enquiry', edit_enquiry_path(enquiry), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>
</div>
